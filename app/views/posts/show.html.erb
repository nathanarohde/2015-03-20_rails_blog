<h4> <%= @post.title %> </h4>
  <%= link_to edit_post_path(@post) do %>Edit<% end %>
  <%= link_to post_path(@post), :data => {:method => 'delete'} do %>Delete<% end %>

  <p>
    <%= @post.content %>
  </p>

  <%= link_to new_post_comment_path(@post) do %>
    Add Comment
  <% end %>
  <br>
  <h5> Comments </h5>

  <% @post.comments.each do |comment| %>
    <li><%= comment.text %><%= link_to edit_post_comment_path(@post, comment) do %>Edit<% end %> <%= link_to post_comment_path(@post, comment), :data => {:method => 'delete'} do %>Delete<% end %></li>
  <% end %>
